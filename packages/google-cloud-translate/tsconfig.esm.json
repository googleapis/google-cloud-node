{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "build/esm",
        "resolveJsonModule": true,
        "module": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": false,
        "lib": ["ES2020",  "DOM"]
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "test/*.ts",
        "test/**/*.ts",
        "system-test/*.ts"
    ]
}