{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "esnext",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "isolatedModules": false,
    "emitDeclarationOnly": true,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "esm/src/*.ts",
    "esm/src/**/*.ts",
    "esm/test/*.ts",
    "esm/test/**/*.ts",
    "esm/system-test/*.ts"
  ]
}
